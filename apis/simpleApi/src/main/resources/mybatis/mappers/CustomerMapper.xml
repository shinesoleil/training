<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.thoughtworks.ketsu.infrastructure.mybatis.mappers.CustomerMapper">
    <insert id="save">
        INSERT INTO customers (id, name)
        VALUES (#{customer.id}, #{customer.name})
    </insert>

    <select id="findById" resultMap="records.customer">
        SELECT C.id, C.name
        FROM customers C
        WHERE C.id = #{id}
    </select>

</mapper>